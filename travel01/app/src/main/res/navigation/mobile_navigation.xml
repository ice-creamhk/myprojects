<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.travel01.ui.home.HomeFragment"
        android:label="@string/title_Weather"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.travel01.ui.dashboard.DashboardFragment"
        android:label="@string/title_Spots"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.travel01.ui.notifications.NotificationsFragment"
        android:label="@string/title_Hotels"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/personalinfo"
        android:name="com.example.travel01.personalinfo"
        android:label="fragment_personalinfo"
        tools:layout="@layout/fragment_personalinfo" />

</navigation>